<div class="col-8">
    <div class="card">
        {{#each errors}}
            <div class="alert alert-danger">{{text}}</div>
        {{else}}
        {{/each}}
        <div class="card-body mx-auto" style="width: 20rem;">
            <form action="" method="POST">
                <h2 class="mb-4">Cadastrar Conta</h2>
                <label for="name" class="mt-3">Nome: </label>
                <input type="text" id="name" name="name" class="form-control" required>
                <label for="email" class="mt-3">E-mail: </label>
                <input type="email" id="email" name="email" required class="form-control">
                <label for="password" class="mt-3">Senha: </label>
                <input type="password" id="password" name="password" required class="form-control">
                <label for="password2" class="mt-3">Repita a senha: </label>
                <input type="password" id="password2" name="password2" required class="form-control">
                <button type="submit" class="btn btn-success mt-3 mx-auto d-block">Cadastrar</button>
            </form>
        </div>
    </div>
</div>