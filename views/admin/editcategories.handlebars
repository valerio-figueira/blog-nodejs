{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<h3 class="text-center">Editar Categoria</h3>
<div class="card mx-auto mt-4" style="width: 18rem;">
  <div class="card-body">
    <form action="/admin/categories/edit" method="POST">
        <input type="hidden" id="id" name="id" value="{{category._id}}" class="form-control">
        <label for="name">Nome: </label>
        <input type="text" id="name" name="name" placeholder="Nome da categoria" class="form-control" value="{{category.name}}">
        <label for="slug" class="mt-3">Slug: </label>
        <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" value="{{category.slug}}">
        <button type="submit" class="btn btn-success mt-3 mx-auto d-block">Editar categoria</button>
    </form>
  </div>
</div>