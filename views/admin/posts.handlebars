<div class="col-8">
    <h2>Lista de Postagens: </h2>
    <hr>
    <a href="/admin/posts/add" class="btn btn-success">Nova Postagem</a>
    {{#each posts}}
        <div class="card mt-3">
            <div class="card-body">
                <h3>{{title}}</h3>
                <small><span class="fw-bold">Descrição:</span> {{description}}</small>
                <p class="mt-3">{{content}}</p>
                <small class="text-muted"><span class="fw-bold">Categoria:</span> {{category.name}}</small>
                <small class="text-muted p-3"><span class="fw-bold">Label:</span> {{slug}}</small>
                <small class="d-block text-muted"><span class="fw-bold">Data da postagem:</span> {{date}}</small>
                <a href="/admin/posts/edit/{{_id}}" class="btn btn-success mt-3">Editar Postagem</a>
                <form action="/admin/posts/remove" method="POST" class="d-inline">
                    <input type="hidden" value="{{_id}}" id="id">
                    <button type="submit" class="btn btn-danger mt-3">Remover Postagem</button>
                </form>
            </div>
        </div>
    {{else}}
        <h2 class="mt-4">Nenhuma postagem registrada</h2>
    {{/each}}
</div>